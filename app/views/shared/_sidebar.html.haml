.ui-widget
  - if !user_signed_in?
    .ui-widget-header{:class => "ui-corner-all"}
      Kirjautuminen
    .ui-widget-content
      %a.sign_in_button= "Kirjaudu sisään"
      #sign_in2= render :partial => 'devise/sessions/signin'
      %a
        .button_s= link_to "Rekisteröidy", "/users/new"
  -else
    .ui-widget-header
      Hei
      - if current_user.realname == nil
        = current_user.email
      - else
        = current_user.realname.split(' ').first
    .ui-widget-content
      %table
        %tr
          %td{:rowspan => "5"}
            = image_tag current_user.avatar_url(:thumb).to_s
        %tr
          %td Pelatut Kierrokset
          %td= current_user.rounds.count
        %tr
          %td Jaetut linkit
          %td= current_user.links.count
        %tr
          %td Julkaistut jutut
          %td= current_user.rounds.count
        %tr
          %td
      .button= link_to "Kirjaudu ulos", destroy_user_session_path
- if logged_in? && current_user.role?(:super_admin)
  = link_to 'Lisää kuvia', imagebanks_path
