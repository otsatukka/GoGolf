= semantic_form_for @link do |f|
  = f.inputs do
    = f.input :title, :label => "Otsikko", :input_html => {  :cols => 10 }
    = f.input :linktype, :as => :radio, :label => "Kategoria", :collection => ["Linkki", "Video", "Kuva"]
    = f.input :body, :label => "Kuvaus", :input_html => {  :rows => 10 }
  #comment_form
    = f.semantic_fields_for :autolink do |t|
      = t.inputs do
        = t.input :linkurl, :label => "Osoite"
  = f.buttons do
    = f.commit_button 'Jaa linkki'