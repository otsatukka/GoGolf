<p>
  <b>Nimi:</b>
  <%= @course.name %>
</p>

<p>
  <b>Osoite:</b>
  <%= @course.address %>
</p>

<p>
  <b>Admin:</b>
  <% if @course.admin != nil %>
    <%= @course.admin.name %>
  <% end %>
</p>

<h2>Add a comment:</h2>
<%= form_for([@course, @course.bogey_counters.counts])  do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :hcpincrement %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :hcpdecrement %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
