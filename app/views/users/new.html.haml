
%h3 Rekisteröidy
%br/
= render "shared/error_messages", :target => @user
= form_for(@user) do |f|
  = render :partial => 'user_fields', :locals => { :f => f }
  %p= f.label :password, "Salasana"
  %p= f.password_field :password
  %p= f.label :password_confirmation, "Kirjoita salasana uudestaan"
  %p= f.password_field :password_confirmation
  = f.submit "Rekisteröidy"
