  %br/
.field
  = f.label :privacy_name, "Näytä Nimi kaikille"
  %br/
  = f.check_box :privacy_name
  %br/
  %br/
.field
  - if can? :edit, Role
    %p
      = f.label :role, "Rooli"
      - for role in Role.find(:all)
        %div
          = check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role)
          = role.name
