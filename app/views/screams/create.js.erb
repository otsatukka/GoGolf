/* Insert a notice between the last scream and the scream form */
$("#scream-notice").html('<div class="flash notice"><%= escape_javascript(flash.delete(:notice)) %></div>');

/* Replace the count of screams */
$("#screams_count").html("<%= pluralize(Scream.count, 'Scream') %>");

/* Add the new comment to the bottom of the comments list */
$("#screams").html("<%= escape_javascript(render(@screams)) %>");

/* Highlight the new comment */
$("#scream_<%= @scream.id %>").effect("highlight", {}, 3000);

/* Reset the comment form */
$("#new_scream")[0].reset();