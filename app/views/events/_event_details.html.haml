.widgetcontainer
  .widgettitle 
    Pelin yksityiskohdat
  .widgetcontent
    = @event.name
    Arvioitu aika: 
    = @event.start_time.to_s(:event_brief)
    %br/
    Location:
    = @event.course_name
    %br/
    Järjestäjä:
    = @event.user.end_user_name
    - if logged_in?
    #event_attendance
      - if current_user.events.include?(@event)
        You are attending this event
        = link_to '(X)', '/attendances/destroy?user_id='+current_user.id.to_s + '&event_id=' + @event.id.to_s
      - else
        = link_to 'Attend this Event', '/attendances/create'
    %div{:style => "clear:both"}
