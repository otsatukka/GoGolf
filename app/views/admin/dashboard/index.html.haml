#emptyspace
.widgetcontainer
  .widgettitle
    säädä kohdilleen
  .widgetcontent
    - if logged_in? 
      -if current_user.role?(:super_admin) || current_user.role?(:super_admin)
       
      %table
        %tr
          %th Category name
          %th
          %th
          %th

        - @categories.each do |category|
          %tr
            %td= category.name
            %td= link_to 'Show', category
            %td= link_to 'Edit', edit_category_path(category)
            %td= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete

      %p= link_to 'New Category', new_category_path
